{
  "workbench.colorTheme": "Default Dark+",
  "workbench.activityBar.location": "top",
  "workbench.statusBar.visible": false,
  "window.menuBarVisibility": "compact",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.highlightModifiedTabs": true,
  "editor.fontSize": 18,
  "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace'",
  "editor.lineHeight": 1.6,
  "editor.fontLigatures": true,
  "editor.renderLineHighlight": "gutter",
  "editor.semanticHighlighting.enabled": true,
  "editor.stickyScroll.enabled": true,
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.bracketPairs": "active",
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  },
  "breadcrumbs.enabled": true,
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "svelte.*, .npmrc, vite.*, app.json, babel.*, eas.*, metro.*, cesconfig.*, TUTORIAL.*, nativewind-env.*, expo.*, expo-env.*, eslint.*, tsconfig.*, README.*, LICENCE, nodemon.*, package-lock.*, next.*, next-env.*, tailwind.*, postcss.*, .eslint*, prettier*, .gitignore*",
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts"
  },
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrains Mono NL, monospace",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.explorerKind": "integrated",
  "tailwindCSS.classAttributes": ["style", "class", "className"],
  "tailwindCSS.classFunctions": ["tw", "tw.color", "tw.style"],
  "files.exclude": {
    "**/.expo": true
  },
  "files.trimTrailingWhitespace": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "postman.mcp.notifications.postmanMCP": false,
  "chat.commandCenter.enabled": false,
  "svelte.enable-ts-plugin": true,
  "debug.disassemblyView.showSourceCode": false,
  "errorLens.delay": 1000
}
